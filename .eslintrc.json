{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es2020": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:tailwind/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"react/react-in-jsx-scope": "off",
		"react/prop-types": 0,
		"react/no-unescaped-entities": 0
	},
	"globals": {
		"React": "writable"
	}
}
